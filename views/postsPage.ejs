<div class="postPage">
    <div class="topbar"><h3>Community VI'R'US Posts</h3></div>
    <div class="postPage__container" id="postContainer">
        <% posts.forEach(post => { %>
            <div class="post">
                <div class="post__title"><p class="postPage--ML"><%= post.post_name %></p></div>
                <div class="post__content"><p class="postPage--ML"><%= post.post_content %></p></div>
                <div class="post__date"><p class="postPage--ML"><%= post.post_date.toString().split('GMT')[0] %></p></div>
            </div>
        <% }) %>
    </div>
    <div class="postPage__btn">
        <a href="#" data-popup-target="#addPost" class="btn btn__xlarge" style="width: 50%; font-family: impact; " >Add a Post!</a>
    </div>
    
</div>




<div id="overlay"></div>

<div class="popup" id="addPost">
    <div class="popup__header">
        <div class="popup__header-title">Add Post:</div>
        <button data-close-button class="popup__header-close-button">&times;</button>
    </div>

    <div class="popup__body">
        <form method="POST">
            <fieldset>
                <label for="projName">Title for Post:
                    <input type="text" name="postName" placeholder="Enter post name..." style="width: 100%; height: 3.5rem; padding: 1.5rem; font-size: 2rem;" required pattern="\S(.*\S)?" id="postNameInput" title="Enter valid post name please!">
                </label>

                <label for="postContent">Post Content:   
                </label>
                <textarea name="postContent" cols="50" rows="30" id="postContent" style="width: 100%; padding: 1.5rem; border: 1px solid black; font-size: 2.5rem;" required pattern="\S(.*\S)?"></textarea>
            </fieldset>
            <input type="submit" name="submitTaskEdit" value="Add Post" id="submitPost" class="btn btn__large" style="margin: 0 auto; margin-top: 2.5rem; border-radius: 10rem; font-size: 2rem;">
        </form>
    </div>
</div>



<script src="/js/popup.js" defer></script>
<script   src="https://code.jquery.com/jquery-3.5.1.min.js"   integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="   crossorigin="anonymous"></script>
