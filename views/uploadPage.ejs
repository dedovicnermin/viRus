<div class="uploadPage">
    <div class="topbar"><h3>Community Submissions</h3></div>
    <div class="uploadPage__container" id="listfiles">
        <% files.forEach(f => { %>
            <div class="uploadPage__container--row">
                <div class="fileDescription"><p><%= f.file_description %> </p></div>
                <a href="http://localhost:3000/api/files/download/<%= f.file_name %>"><%= f.file_name %></a>
            </div>
        <% }) %>
    </div>
    <div class="uploadPage__btn">
        <a href="#" data-popup-target="#addFile" class="btn btn__xlarge" style="width: 50%; font-family: impact; " >Add a File!</a>
    </div>


</div>



<!-- add file popup -->
<div class="popup" id="addFile">
    <div class="popup__header">
        <div class="popup__header-title">Add File (16MB Max):</div>
        <button data-close-button class="popup__header-close-button">&times;</button>
    </div>

    <div class="popup__body">
        <form method="post" id="fileUploadForm" enctype="multipart/form-data" action="" >

            <label for="desc">What does this file contain?:   
            </label>
            <textarea name="desc" cols="50" rows="10" id="fileDesc" style="width: 100%; padding: 1.5rem; border: 1px solid black; font-size: 2.5rem;" required pattern="\S(.*\S)?"></textarea>


            <label for="uploadfile" style="font-size: 2rem;">Upload File:</label>
            <input type="file" id="uploadfile" placeholder="Upload File" name="uploadfile" style="height: 3rem; font-size: 1.5rem; margin: 0 auto;">
            <div class="btncontainer">
                <button type="submit" id="btnSubmit" style="width: 28.4rem; font-size: 2rem; margin-top: 1.5rem; margin: 0 auto; border-radius: 10rem;" class="btn btn__large">Upload</button>
            </div>
            
        </form>
    </div>
</div>

<div id="overlay"></div>



<script src="/js/popup.js" defer></script>
<script   src="https://code.jquery.com/jquery-3.5.1.min.js"   integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="   crossorigin="anonymous"></script>
<script src="/js/uploadPage.js" defer></script>
