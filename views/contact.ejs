<div class="popup" id="addSub">
    <div class="popup__header">
        <div class="popup__header-title">Enter Subscriber Information:</div>
        <button data-close-button class="popup__header-close-button">&times;</button>
    </div>

    <div class="popup__body">
        <form method="POST" action="/contact">
            <fieldset>
                <label for="projName">Full Name:
                    <input type="text" name="name" placeholder="Enter name..." style="width: 100%; height: 3.5rem; padding: 1.5rem; font-size: 2rem;" required pattern="\S(.*\S)?" id="nameInput" title="Enter valid name please!">
                </label>

                <label for="projName">Email:
                    <input type="email" name="email" placeholder="Enter email..." style="width: 100%; height: 3.5rem; padding: 1.5rem; font-size: 2rem;" required pattern="\S(.*\S)?" id="emailInput" title="Enter valid email please!">
                </label>
            </fieldset>
            <input type="submit" name="submitSub" value="Submit" id="submitSub" class="btn btn__large" style="margin: 0 auto; margin-top: 2.5rem; border-radius: 10rem; font-size: 2rem;">
        </form>
    </div>
